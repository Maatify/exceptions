{
  "name": "maatify/exceptions",
  "description": "Policy-driven, escalation-aware exception library for PHP applications.",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "exceptions",
    "error-handling",
    "policy",
    "escalation",
    "http",
    "domain",
    "php",
    "maatify"
  ],
  "homepage": "https://github.com/Maatify/exceptions",
  "support": {
    "issues": "https://github.com/Maatify/exceptions/issues",
    "source": "https://github.com/Maatify/exceptions"
  },
  "authors": [
    {
      "name": "Mohamed Abdulalim",
      "email": "mohamed@maatify.dev",
      "homepage": "https://www.maatify.dev",
      "role": "Architect"
    }
  ],
  "require": {
    "php": "^8.2"
  },
  "autoload": {
    "psr-4": {
      "Maatify\\Exceptions\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Maatify\\Exceptions\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "^1.11"
  },
  "scripts": {
    "test": "phpunit",
    "analyse": "phpstan analyse src --level=max"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "sort-packages": true
  },
  "extra": {
    "branch-alias": {
      "dev-main": "1.x-dev"
    }
  }
}